{
  "log": {
    "loglevel": "info",
    "access": "/app/xray.log",
    "error": "/app/xray_error.log"
  },

  "dns": {
    "servers": [
      {
        "address": "https://1.1.1.1/dns-query",
        "skipFallback": true
      }
    ],
    "outbound": "dns-out",
    "disableCache": false,
    "queryStrategy": "UseIP",
    "disableFallback": true,
    "disableFallbackIfMatch": true
  },

  "routing": {
    "domainStrategy": "AsIs",
    "rules": [
      {
        "type": "field",
        "ip": ["geoip:private"],
        "outboundTag": "block"
      },
      {
        "type": "field",
        "protocol": ["bittorrent"],
        "outboundTag": "block"
      }
    ]
  },

  "inbounds": [
    {
      "tag": "vless-ru-ws",
      "listen": "0.0.0.0",
      "port": 2098,
      "protocol": "vless",
      "settings": {
        "clients": [],
        "decryption": "none"
      },
      "streamSettings": {
        "network": "ws",
        "security": "tls",
        "tlsSettings": {
          "serverName": "video.up.railway.app",
          "certificates": [
            {
              "certificateFile": "/app/certs/server.cert",
              "keyFile": "/app/certs/server.key"
            }
          ]
        },
        "wsSettings": {
          "path": "/"
        },
        "sniffing": {
          "enabled": true,
          "destOverride": ["http", "tls", "quic"]
        }
      }
    },
    {
      "tag": "vless-usa-ws",
      "listen": "0.0.0.0",
      "port": 2099,
      "protocol": "vless",
      "settings": {
        "clients": [],
        "decryption": "none"
      },
      "streamSettings": {
        "network": "ws",
        "security": "tls",
        "tlsSettings": {
          "serverName": "video.up.railway.app",
          "certificates": [
            {
              "certificateFile": "/app/certs/server.cert",
              "keyFile": "/app/certs/server.key"
            }
          ]
        },
        "wsSettings": {
          "path": "/usa"
        },
        "sniffing": {
          "enabled": true,
          "destOverride": ["http", "tls", "quic"]
        }
      }
    }
  ],

  "outbounds": [
    {
      "protocol": "freedom",
      "tag": "direct"
    },
    {
      "protocol": "freedom",
      "tag": "dns-out"
    },
    {
      "protocol": "blackhole",
      "tag": "block"
    }
  ]
}
